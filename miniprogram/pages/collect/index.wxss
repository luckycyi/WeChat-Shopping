.collect_main {
  background-color: #f3f4f6;
}
.collect_main .collect_title {
  padding: 40rpx 0;
}
.collect_main .collect_title .collect_item {
  padding: 15rpx 30rpx;
  border: 1rpx solid #ccc;
  margin-left: 15rpx;
  background-color: #fff;
}
.collect_main .collect_title .active {
  color: var(--themeColor);
}
.collect_main .first_tabs navigator {
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.collect_main .first_tabs navigator .first_img_item {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_main .first_tabs navigator .first_img_item image {
  width: 70%;
}
.collect_main .first_tabs navigator .first_info_item {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .first_tabs navigator .first_info_item .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_main .first_tabs navigator .first_info_item .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.collect_main .collect_img {
  width: 100vw;
  margin-top: 200rpx;
}
