@import './style/iconfont';
/* 微信小程序 不支持通配符 * */
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 
主题颜色 通过变量来实现
1 less 中存在变量这个知识
2 原生的css和wxss也是支持变量
*/
page {
  /* 自定义主题颜色 */
  --themeColor: #eb4450;
  /* 
  设计稿的大小是 375px
  标准是 750px = 750rpx 
  设计稿 1px = 2rpx
  */
  font-size: 28rpx;
}
